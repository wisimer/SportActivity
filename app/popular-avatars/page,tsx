"use client"

import { useState, useEffect } from "react"
import { Button } from "@/components/ui/button"
import { Card, CardContent } from "@/components/ui/card"
import { Input } from "@/components/ui/input"
import { Badge } from "@/components/ui/badge"
import { ArrowLeft, Search, Download, Eye, Users, Loader2 } from "lucide-react"
import Image from "next/image"
import Link from "next/link"

interface PopularAvatar {
  id: string
  imageUrl: string
  sportType: string
  sportName: string
  likes: number
  downloads: number
  createdAt: string
}

interface ApiResponse {
  data: PopularAvatar[]
  total: number
  page: number
  pageSize: number
  hasMore: boolean
}

const SPORT_TYPES = [
  "å…¨éƒ¨",
  "èˆªç©ºè¿åŠ¨",
  "ç¾å¼æ©„æ¦„çƒ",
  "å°„ç®­",
  "æ£’å’çƒ",
  "å°çƒ",
  "å•¦å•¦æ“",
  "é£ç›˜",
  "ä½“æ“",
  "ä½“è‚²èˆè¹ˆ",
  "ç©ºæ‰‹é“",
  "è‡ªç”±æå‡»",
  "æ‘©æ‰˜è‰‡",
  "æ¡‘åš",
  "æ”€å²©",
  "å£çƒ",
  "é“äººä¸‰é¡¹",
  "æ‹”æ²³",
  "æ½œæ°´",
  "æ‰‹çƒ",
  "è½®æ»‘",
  "çŸ­æŸ„å¢™çƒ",
  "è½¯å¼æ›²æ£çƒ",
  "å®šå‘",
  "åŠ›é‡ä¸¾",
  "æ³°æ‹³",
  "æŸ”æœ¯",
  "æ•‘ç”Ÿ",
  "æµ®å£«å¾·çƒ",
  "æ­¦æœ¯",
  "æ»‘æ°´",
  "è·çƒ",
  "åœ°æ·çƒ",
  "æ£ç½‘çƒ",
  "çš®åˆ’è‰‡",
]

export default function PopularAvatarsPage() {
  const [avatars, setAvatars] = useState<PopularAvatar[]>([])
  const [loading, setLoading] = useState(false)
  const [searchTerm, setSearchTerm] = useState("")
  const [selectedSport, setSelectedSport] = useState("å…¨éƒ¨")
  const [page, setPage] = useState(1)
  const [hasMore, setHasMore] = useState(true)
  const [total, setTotal] = useState(0)

  const fetchAvatars = async (pageNum: number, reset = false) => {
    setLoading(true)
    try {
      const params = new URLSearchParams({
        page: pageNum.toString(),
        pageSize: "12",
        search: searchTerm,
        sportType: selectedSport === "å…¨éƒ¨" ? "" : selectedSport,
      })

      const response = await fetch(`/api/popular-avatars?${params}`)
      const data: ApiResponse = await response.json()

      if (reset) {
        setAvatars(data.data)
      } else {
        setAvatars((prev) => [...prev, ...data.data])
      }

      setHasMore(data.hasMore)
      setTotal(data.total)
    } catch (error) {
      console.error("è·å–çƒ­é—¨å¤´åƒå¤±è´¥:", error)
    } finally {
      setLoading(false)
    }
  }

  useEffect(() => {
    setPage(1)
    fetchAvatars(1, true)
  }, [searchTerm, selectedSport])

  const handleLoadMore = () => {
    const nextPage = page + 1
    setPage(nextPage)
    fetchAvatars(nextPage, false)
  }

  const handleDownload = (avatar: PopularAvatar) => {
    const link = document.createElement("a")
    link.href = avatar.imageUrl
    link.download = `çƒ­é—¨å¤´åƒ_${avatar.sportName}_${avatar.id}.png`
    document.body.appendChild(link)
    link.click()
    document.body.removeChild(link)
  }

  const handleView = (imageUrl: string) => {
    window.open(imageUrl, "_blank")
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-purple-400 via-pink-500 to-red-500">
      <div className="max-w-md mx-auto p-4 space-y-6">
        {/* å¤´éƒ¨å¯¼èˆª */}
        <div className="flex items-center gap-4 py-4">
          <Link href="/">
            <Button variant="outline" size="sm" className="bg-white/90 hover:bg-white border-white/50">
              <ArrowLeft className="w-4 h-4" />
            </Button>
          </Link>
          <div className="flex-1">
            <h1 className="text-2xl font-bold text-white drop-shadow-lg">çƒ­é—¨å¤´åƒ</h1>
            <p className="text-white/80 text-sm">å‘ç°ç²¾å½©çš„è¿åŠ¨æµ·æŠ¥ä½œå“</p>
          </div>
        </div>

        {/* æœç´¢å’Œç­›é€‰ */}
        <Card className="border-0 shadow-xl bg-white/95 backdrop-blur-sm">
          <CardContent className="p-4 space-y-4">
            {/* æœç´¢æ¡† */}
            <div className="relative">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-4 h-4" />
              <Input
                placeholder="æœç´¢è¿åŠ¨ç±»å‹..."
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                className="pl-10"
              />
            </div>

            {/* è¿åŠ¨ç±»å‹ç­›é€‰ */}
            <div className="flex flex-wrap gap-2 max-h-32 overflow-y-auto">
              {SPORT_TYPES.map((sport) => (
                <Badge
                  key={sport}
                  variant={selectedSport === sport ? "default" : "secondary"}
                  className="cursor-pointer text-xs"
                  onClick={() => setSelectedSport(sport)}
                >
                  {sport}
                </Badge>
              ))}
            </div>

            {/* ç»Ÿè®¡ä¿¡æ¯ */}
            <div className="flex items-center justify-between text-sm text-gray-600">
              <span className="flex items-center gap-1">
                <Users className="w-4 h-4" />å…± {total} ä¸ªä½œå“
              </span>
              {selectedSport !== "å…¨éƒ¨" && <span>ç­›é€‰ï¼š{selectedSport}</span>}
            </div>
          </CardContent>
        </Card>

        {/* å¤´åƒç½‘æ ¼ */}
        <div className="grid grid-cols-2 gap-4">
          {avatars.map((avatar) => (
            <Card key={avatar.id} className="border-0 shadow-lg bg-white/95 backdrop-blur-sm overflow-hidden">
              <CardContent className="p-0">
                <div className="relative aspect-[3/4] bg-gray-100">
                  <Image
                    src={avatar.imageUrl || "/placeholder.svg?height=300&width=225&text=çƒ­é—¨å¤´åƒ"}
                    alt={`${avatar.sportName}æµ·æŠ¥`}
                    fill
                    className="object-cover"
                  />
                  <div className="absolute inset-0 bg-black/0 hover:bg-black/20 transition-all duration-300 flex items-center justify-center opacity-0 hover:opacity-100">
                    <div className="flex gap-2">
                      <Button
                        size="sm"
                        variant="secondary"
                        onClick={() => handleView(avatar.imageUrl)}
                        className="bg-white/90 hover:bg-white"
                      >
                        <Eye className="w-3 h-3" />
                      </Button>
                      <Button
                        size="sm"
                        variant="secondary"
                        onClick={() => handleDownload(avatar)}
                        className="bg-white/90 hover:bg-white"
                      >
                        <Download className="w-3 h-3" />
                      </Button>
                    </div>
                  </div>
                </div>
                <div className="p-3">
                  <div className="flex items-center justify-between mb-2">
                    <Badge variant="secondary" className="text-xs">
                      {avatar.sportName}
                    </Badge>
                    <div className="flex items-center gap-2 text-xs text-gray-500">
                      <span>â¤ï¸ {avatar.likes}</span>
                      <span>ğŸ“¥ {avatar.downloads}</span>
                    </div>
                  </div>
                  <p className="text-xs text-gray-500">{new Date(avatar.createdAt).toLocaleDateString("zh-CN")}</p>
                </div>
              </CardContent>
            </Card>
          ))}
        </div>

        {/* åŠ è½½æ›´å¤š */}
        {hasMore && (
          <div className="text-center">
            <Button
              onClick={handleLoadMore}
              disabled={loading}
              className="bg-white/20 hover:bg-white/30 text-white border border-white/30"
            >
              {loading ? (
                <>
                  <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                  åŠ è½½ä¸­...
                </>
              ) : (
                "åŠ è½½æ›´å¤š"
              )}
            </Button>
          </div>
        )}

        {/* æ— æ›´å¤šæ•°æ®æç¤º */}
        {!hasMore && avatars.length > 0 && (
          <div className="text-center text-white/80 text-sm py-4">
            <p>å·²æ˜¾ç¤ºå…¨éƒ¨ {total} ä¸ªä½œå“</p>
          </div>
        )}

        {/* ç©ºçŠ¶æ€ */}
        {!loading && avatars.length === 0 && (
          <div className="text-center py-12">
            <Users className="w-16 h-16 mx-auto mb-4 text-white/50" />
            <p className="text-white/80 text-lg mb-2">æš‚æ— çƒ­é—¨å¤´åƒ</p>
            <p className="text-white/60 text-sm">å¿«å»ç”Ÿæˆä½ çš„ä¸“å±æµ·æŠ¥å§ï¼</p>
          </div>
        )}
      </div>
    </div>
  )
}
